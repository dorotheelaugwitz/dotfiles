alias ll="ls -al"
alias ls="ls -G"
alias ln="ln -v"
alias h="cd ~"
alias gf="git flow"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Rails
alias be="bundle exec"
alias s="bundle exec rspec"
alias rc="bundle exec rails console"
alias rs="bundle exec rails server"

# Python
alias t="python -m pytest"

# pip
alias pip="pip3"
